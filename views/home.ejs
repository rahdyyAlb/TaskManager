<!DOCTYPE>
<html>
<head>
    <title>
        Tasks Manager
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col-10 card shadow mx-auto mt-3">

                <div class="card-header text-center bg-dark text-light mt-2">
                    <h3>LISTE DES TÂCHES</h3>
                </div>

                <div class="my-2">
                    <a href="/task/new" class="float-end btn btn-success">AJOUTER</a>
                </div>
                <div class="card-content">

                    <table class="table ">
                        <thead class="table-dark">
                        <tr>
                            <th scope="col">Label</th>
                            <th scope="col">Desc</th>
                            <th scope="col">Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% tasks.forEach(task => { %>
                            <tr id="<%=task._id%>">
                                <td> <%= task.label %> </td>
                                <td> <%= task.description %> </td>
                                <td> <%= task.dateTask.toLocaleDateString() %>  </td>
                                <td> <%= task.status ? 'OK' : 'En attente' %> </td>
                                <td>
                                    <button id="btn-delete-" class="btn btn-danger btn-delete" data-id="<%=task._id%>">SUPPRIMER</button>
                                </td>
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>

                </div>

            </div>

        </div>

    </div>
    <script>


        let btnDeletes = document.querySelectorAll(".btn-delete");

        btnDeletes.forEach((btnDelete) => {
            btnDelete.addEventListener("click", (e) => {
               let taskId = btnDelete.getAttribute("data-id");
                if (window.confirm("Voulez vous supprimer la tâche ?")) {
                    // redirige vers l'url /task/delete/id
                    window.location.href = "/task/delete/" + taskId;
                }
            });
        });

    </script>
</body>
</html>
