<!DOCTYPE>
<html>
<head>
    <title>
        Tasks Manager
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>

<div class="container">

    <div class="row">

        <div class="col-10 card shadow mx-auto mt-3">

            <div class="card-header text-center bg-dark text-light mt-2">
                <h3>AJOUT D'UNE TÂCHE</h3>
            </div>
            <% if ( typeof erreurs != 'undefined' && erreurs !== "Le champs suivant sont requis :" ) { %>
            <div id="erreur" class="alert alert-danger mt-2">

                    <p>
                        <%= erreurs %>
                    </p>
            </div>
            <% } %>
            <div class="card-content mt-3">

                <form method="post" action="/task/new">

                    <div class="mb-3">
                        <label for="label" class="form-label">Label</label>
                        <input type="text" class="form-control" name="label" id="label" placeholder="Label de la tâche..">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="description" id="description" placeholder="Description de la tâche.."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="date" class="form-label">Date tâche</label>
                        <br>
                        <input type="date" name="dateTask" id="dateTask">
                    </div>

                    <div class="mb-3">
                        <label for="status" class="form-label">Terminée ?</label>
                        <input type="checkbox" name="status" id="status">
                    </div>

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" class="btn btn-dark">AJOUTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>
